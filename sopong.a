	processor 6502
        include "vcs.h"
        include "macro.h"
        include "xmacro.h"

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Variables segment

        seg.u Variables
	org $80

ballX		.byte ; ball position
ballY		.byte
ballDx		.byte ; ball movement deltas
ballDy		.byte
ballSx		.byte ; ball horizontal speed
ballSy		.byte ; ball vertical speed
ballDirX	.byte ; ball horizontal direction  0 right / 1 left
ballDirY	.byte ; ball vertical direction	   0 down / 1 up
p1y		.byte ; paddles vert pos
p2y		.byte
pl1p		.word ; pointers to player graphics data tables
pl2p		.word
score0		.byte ; scores
score1		.byte
random		.byte ; pseudo random value tossed every frame
bounceCount	.byte
ballStop 	.byte
v0		.byte
v1		.byte
scoreData0	.word
scoreData1	.word
gameOver	.byte
gameState	.byte ; 0 - title; 1-ingame; 2-endscreen;
b		.byte
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Consts

RAND_EOR_8 = $A9
STARTING_X_SPEED = 16

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Code segment

	seg Code
        org $f000

Start
	CLEAN_START

; initialize variables        
	lda #$0a
        sta COLUP0
        sta COLUP1
        lda #%00100111
        sta NUSIZ0
        sta NUSIZ1
        lda #5
        sta AUDC0
        lda #7
        sta AUDC1
	lda #0 
        sta gameState

        
carry
        
; start of frame

NextFrame
        lsr SWCHB	; test Game Reset switch
        bcc Start	; reset?
; 1 + 3 lines of VSYNC
	VERTICAL_SYNC
; 37 lines of underscan
	TIMER_SETUP 37

;randomize
	jsr rand

	lda gameState
        bne skipTitle
     	
; Set playfield foreground and background
        lda #$00
        sta COLUBK
        lda b
        asl
        asl
        and #%11110000
	ora #%00000110 
	sta COLUPF
        inc b
        sta WSYNC
        TIMER_WAIT

        lda #0
        sta VBLANK


    	ldy #35
TopLoop
        sta WSYNC
        dey 
        bne TopLoop	; repeat until all scanlines drawn


        ldy #122
ScanLoop
; WSYNC and store playfield registers
        sta WSYNC
        lda PFBitmap0,y
        sta PF0		; store first playfield byte
        lda PFBitmap1,y
        sta PF1		; store 2nd byte
        lda PFBitmap2,y
        sta PF2		; store 3rd byte
; Here's the asymmetric part -- by this time the TIA clock
; is far enough that we can rewrite the same PF registers
; and display new data on the right side of the screen
        nop
        nop
        nop		; pause to let playfield finish drawing
        lda PFBitmap3,y
        sta PF0		; store 4th byte
        lda PFBitmap4,y
        sta PF1		; store 5th byte
        lda PFBitmap5,y
        sta PF2		; store 6th byte

	dey 
        bne ScanLoop	; repeat until all scanlines drawn
; Reset playfield
        SLEEP 14	; give time to finish drawing scanline
	lda #0
        sta PF0
        sta PF1
        sta PF2		; clear playfield

    	ldy #35
bottomLoop
        sta WSYNC
        dey 
        bne bottomLoop	; repeat until all scanlines drawn

        TIMER_SETUP 28

	;; title body here

	bit INPT4	; read button
        bmi NoFireButton ; bit 7 set?
        jsr InitGame
        inc gameState
NoFireButton        

	lda #2
        sta VBLANK


	jmp EndOfFrame


skipTitle

	cmp #2
        bne skipFireCheck
	bit INPT4	; read button
        bmi NoFireButton2 ; bit 7 set?
        lda #0
        sta gameState
        bit INPT4	; read button
        bpl *-2 ; bit 7 set?
NoFireButton2        
	

skipFireCheck

; set playfield top line
        
        lda #%00100001
        sta CTRLPF
        lda #$08
	sta COLUPF
        
        lda #$ff
        sta PF2
        sta PF1
        sta PF0
        sta CXCLR

; set players positions
        
        lda #20
        ldx #2		; missile 0
        jsr SetHorizPos	

        lda #168
        ldx #3		; missile 1
        jsr SetHorizPos	

	lda score0
        asl
        tax
	lda .scorePtr,x
	sta scoreData0
	lda .scorePtr+1,x
        sta scoreData0 + 1

        lda #52
        ldx #0		; player 0
        jsr SetHorizPos	

	lda score1
        asl
        tax
	lda .scorePtr,x
	sta scoreData1
	lda .scorePtr+1,x
        sta scoreData1 + 1

	lda #0
	ldx score1
        cpx #10
        bmi skipDecimal
        lda #8
skipDecimal
       	clc
        adc #84
        ldx #1		; player 1
        jsr SetHorizPos	


; calculate player1 top offset pointer
        
        lda #>.pldata
        sta pl1p + 1
        clc
	lda #<.pldata
        adc p1y
	sta pl1p
        bcc carry1
        inc pl1p + 1
carry1        

; calculate player2 top offset pointer

	lda #>.pldata
        sta pl2p + 1
        clc
	lda #<.pldata
        adc p2y
	sta pl2p
        bcc carry2
        inc pl2p + 1
carry2        

	lda gameOver
        beq s1
        jmp SkipOutRight
s1        
        
; check player 1 joy

	ldx p1y
	lda #%00010000	; Up?
	bit SWCHA
	bne SkipMoveUp1
        cpx #0		; check limit
        beq SkipMoveUp1
        dex
        dex
SkipMoveUp1
	lda #%00100000	; Down?
	bit SWCHA 
	bne SkipMoveDown1
        cpx #142	; check limit
        bcs SkipMoveDown1
        inx
        inx
SkipMoveDown1
	stx p1y

; check player 2 joy

	ldx p2y
	lda #%00000001	; Up?
	bit SWCHA
	bne SkipMoveUp2
        cpx #0		; check limit
        beq SkipMoveUp2
        dex
        dex
SkipMoveUp2
	lda #%00000010	; Down?
	bit SWCHA 
	bne SkipMoveDown2
        cpx #142	; check limit
        bcs SkipMoveDown2
        inx
        inx
SkipMoveDown2
	stx p2y        



; randomize 

	lda ballStop
        bne SkipOutRight

; count vertical ball movement

	clc
	lda ballDy
        adc ballSy
        tax 
        and #15
        sta ballDy
        txa
        lsr
        lsr
        lsr
        lsr
        tax
        lda ballDirY
        beq singSkip2 
        txa
	jsr signChange
        tax
singSkip2        
	clc 
        txa
        adc ballY
        sta ballY

; check if ball bounces

	sec
        sbc #3
        bcs skipBounceTop
        lda #0
        sta ballDirY
	jsr bounceSound
skipBounceTop        
        lda #171
        clc
        sbc ballY
        bcs SkipBounceBottom
        lda #1
        sta ballDirY
	jsr bounceSound
SkipBounceBottom


; count horizontal ball movement

        clc
	lda ballDx
        adc ballSx
        tax 
        and #15
        sta ballDx
        txa
        lsr
        lsr
        lsr
        lsr
        tax
        lda ballDirX
        beq singSkip 
        txa
	jsr signChange
        tax
        
singSkip        
        clc 
        txa
        adc ballX
        sta ballX
        
; check if ball leaves screen        

	sec
        sbc #17
        bcs skipOutLeft
        lda #0
        jsr playerAFails
        jmp SkipOutRight
skipOutLeft        
        lda #172
        clc
        sbc ballX
        bcs SkipOutRight
        lda #1
        jsr playerAFails
SkipOutRight

        
; and set sprites horizontal positions    


        lda ballX	
        ldx #4		; ball
        jsr SetHorizPos	
        
	sta WSYNC	
        sta HMOVE	
        
        TIMER_WAIT
        	
        ldx #0
	stx VBLANK

	SKIP_SCANLINES 7
        
; clear playfield registers

	stx PF0
        stx PF1
        stx PF2
        
; 176 lines of playfield 

	ldy #176	
        
LVScan		;;;;;;;;;    -------------- LOOP START
	
; draw ball if needed        
        ldx #1
        
	tya
        sbc ballY	
        cmp #8         
        bcs InSprite	
	inx	
InSprite
      

; fill sprite registers
	lda (pl1p),y
 	sta WSYNC
        stx ENABL
        sta ENAM0
	lda (pl2p),y
	sta ENAM1

; draw playfield v-line 
	tya
        and #4
        beq skipFill
        lda #128
skipFill        
	sta PF2               

       	cpy #126
        bmi afterScore
	lda (scoreData0),y
        sta GRP0
        lda (scoreData1),y
        sta GRP1

afterScore

        dey		
        bne LVScan	
        
; 176 lines of playfield      -------------- LOOP END        
        
; draw bottom line       
        
	lda #$ff
	sta WSYNC
        sta PF0
        sta PF1
        sta PF2
	SKIP_SCANLINES 7

; 29 lines of overscan

	lda #2
        sta VBLANK
	TIMER_SETUP 29

; if sound plays, decrease...
	lda v0
        sta AUDV0
        beq skipV0down
        dec v0
skipV0down

	lda v1
        sta AUDV1
        beq skipV1down
        dec v1
skipV1down

	lda ballStop
	bne notCollidedR

; check collision of ball and player Left

	lda ballDirX
        beq notCollidedL
	lda #%01000000	
	and CXM0FB
	beq notCollidedL
; collided Left - BOUNCE!      | ------------------------>
	lda #0
        sta ballDirX
	lda p1y
	jsr SetYSpeed       
        

notCollidedL

; check collision of ball and player Right
 
	lda ballDirX
        bne notCollidedR
	lda #%01000000
	and CXM1FB
	beq notCollidedR
; collided Right - BOUNCE!     <-------------------------- |
	lda #1
        sta ballDirX
	lda p2y
        jsr SetYSpeed  
        
notCollidedR
	
        lda ballStop
        beq EndOfFrame
        dec ballStop

EndOfFrame

	TIMER_WAIT
; total = 262 lines, go to next frame
        jmp NextFrame

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; SUBROUTINES

SetYSpeed ; player in accu
	ldx #1
        stx ballDirY
        clc
	jsr signChange
        adc #158
        sec
        sbc ballY
        bpl skipS
        jsr signChange
        tax
      	lda #0
	sta ballDirY
	txa
skipS   
	asl
        sta ballSy
      	jsr bounceSound
        inc bounceCount
        lda bounceCount
        lsr
        lsr
        lsr
        clc
        adc ballSx
        sta ballSx
        
	rts

; someone failed 
playerAFails
	eor #1
        sta ballDirX
        beq p1fails
;p0 fails        
	ldx #162
   	inc score1   
        lda score1
        cmp #15
     	bpl EndGame   

        lda p2y
	bcc skipp1        
	   
p1fails
;p1
	ldx #26
	inc score0
        lda score0
        cmp #15
        bpl EndGame   
	lda p1y

skipp1
; restart ball position (winner Y pos in accu)
	jsr signChange
        adc #156
        sta ballY
        stx ballX
        lda random
        and #15
        sta ballSy
	lda random 
        rol
        rol
        and #1
        sta ballDirY
        lda #20
        sta ballStop
        lda #31
        sta AUDF1
        lda #15
        sta v1
        lda #0
        sta bounceCount
        lda STARTING_X_SPEED
        sta ballSx
	rts
        
EndGame
	lda #1
        sta gameOver
        inc gameState
	rts

InitGame
        lda #94
        sta ballX
        lda #86
        sta ballY
	lda #72
        sta p1y
        sta p2y
        sta ballDx
        sta ballDy
	lda #STARTING_X_SPEED
        sta ballSx
	lda random
        and #15
        sta ballSy
	lda random
        rol 
        rol
        and #1
	sta ballDirX
	lda random
        rol 
        rol
        rol
        and #1        
        sta ballDirY
        lda #0
        sta bounceCount
	sta ballStop
        sta gameOver
        sta score0
        sta score1
	rts

bounceSound
        lda #20
        sta AUDF0
        lda #12
        sta v0
	rts

signChange
        eor #$ff
        clc
        adc #1
	rts	

; SetHorizPos routine
; A = X coordinate
; X = sprite number 
SetHorizPos
	sta WSYNC	; start a new line
	sec		; set carry flag
DivideLoop
	sbc #15		; subtract 15
	bcs DivideLoop	; branch until negative
	eor #7		; calculate fine offset
	asl
	asl
	asl
	sta RESP0,x	; fix coarse position
	asl
	sta HMP0,x	; set fine offset
	rts		; return to caller


rand    lda random
	beq xseed
	lsr
        bcc srand
xseed   
	eor #RAND_EOR_8
srand
	sta random
	rts

